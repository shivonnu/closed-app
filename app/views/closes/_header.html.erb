<div class = "header">
  <div class = "wrapper">
    <div class = "side-bar-header">
      <div class = "heder-name">
        <% if user_signed_in? %>
          <%= link_to current_user.store_name, root_path,  class: "user-nickname" %>
        <%else%>
          <%= link_to "ようこそゲストさん！", root_path, class: "user-nickname" %>
        <%end%>
      </div>  
    </div>
      <div class = "check-header">
          <div class = "left-header">
            <div class = "header-title">
              closed-app
            </div>
          </div>
          <% if user_signed_in? %>
          <div class = "right-header">
            <div class = "header-button">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </div>
          </div>
          <%else%>
          <div class = "right-header">
            <div class = "header-button">
              <%= link_to "ログイン", new_user_session_path%>
